<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>Blog</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td><%= comment.blog %></td>
        <td><%= link_to 'Show', blog_comments_path(comment) %></td>
        <td>
        <%= link_to 'Edit', edit_blog_comment_path(comment) %>
        </td>
        <td><%= link_to 'Destroy', blog_comments_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_blog_comment_path %>
